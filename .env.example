# AI E-commerce Assistant API credentials
AI_ASSISTANT_API_KEY=your_api_key_here
AI_ASSISTANT_API_SECRET=your_api_secret_here

# Model configurations
BERT_MODEL_NAME=bert-base-uncased
OPENAI_API_KEY=your_openai_api_key_here

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ai_ecommerce

# Cache configuration
REDIS_URL=redis://localhost:6379/0
USE_CACHE=True

# Shopify credentials
SHOPIFY_SHOP_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token_here
SHOPIFY_API_VERSION=2023-01

# API configuration
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# Feature flags
ENABLE_RECOMMENDATIONS=True
ENABLE_SMART_SEARCH=True
ENABLE_DYNAMIC_PRICING=True
ENABLE_CUSTOMER_SUPPORT=True
ENABLE_CONTENT_GENERATION=True
ENABLE_INVENTORY_FORECASTING=True
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_CART_RECOVERY=True

# Model parameters
RECOMMENDATION_EMBEDDING_SIZE=768
MAX_RECOMMENDATIONS=10
MAX_SEARCH_RESULTS=20
MIN_SEARCH_SCORE=0.5
SENTIMENT_THRESHOLD_POSITIVE=0.6
SENTIMENT_THRESHOLD_NEGATIVE=0.4 